[Unit]
Description=OpenChirp.io RAK831 packet forwarder
Wants=network-online.target
After=network-online.target

[Service]
User=root
Group=root
Restart=always
RestartSec=250ms
StartLimitBurst=0

WorkingDirectory=/opt/oc-lora-gw-pf/configs

ExecStartPre=/opt/oc-lora-gw-pf/scripts/gwrst.sh
ExecStartPre=/opt/oc-lora-gw-pf/scripts/update_gwid.sh /opt/oc-lora-gw-pf/configs/local_conf.json
ExecStart=/opt/oc-lora-gw-pf/bin/lora_pkt_fwd
Nice=-20

[Install]
WantedBy=multi-user.target
